# 3. Plotting Function with EXTRA Large Font Settings
def plot_comparative_matrices_largest(data_dict):
    # Increase the overall figure size slightly to accommodate larger fonts
    fig, axes = plt.subplots(2, 3, figsize=(26, 18))
    axes = axes.flatten()
    
    for i, (name, cm) in enumerate(data_dict.items()):
        # Normalize by Row (Producer's Accuracy)
        row_sums = cm.sum(axis=1)[:, np.newaxis]
        row_sums[row_sums == 0] = 1 
        cm_norm = cm.astype('float') / row_sums
        
        # INCREASED annot_kws size from 24 to 26
        sns.heatmap(cm_norm, annot=True, fmt='.2f', cmap='Blues', 
                    xticklabels=labels, yticklabels=labels, ax=axes[i], cbar=False,
                    annot_kws={"size": 26, "weight": "bold"})
        
        # INCREASED font sizes for titles and labels proportionally
        axes[i].set_title(name, fontsize=28, fontweight='bold', pad=18)
        axes[i].set_ylabel('True Class', fontsize=24, fontweight='bold')
        axes[i].set_xlabel('Predicted Class', fontsize=24, fontweight='bold')
        axes[i].tick_params(axis='both', which='major', labelsize=22)

    # Remove the empty 6th subplot
    fig.delaxes(axes[5])
    
    plt.tight_layout(pad=3.0)
    plt.savefig('Figure3_Combined_Confusion_Matrices_Largest.png', dpi=300)
    plt.show()

# Run the plot
plot_comparative_matrices_largest(data)

## Figure 4: Disagreement Analysis (TD, QD, AD, and MAI)
import matplotlib.pyplot as plt
import pandas as pd
import numpy as np

# 1. Data Setup
models = ['RF', 'GBM', 'CART', 'MD', 'SVM']
oa_vals = np.array([93.44, 92.46, 88.36, 82.62, 36.07])
td_vals = 100 - oa_vals # Total Disagreement (TD)
mai_vals = oa_vals      # Map Agreement Index (MAI)

# Estimated QD/AD breakdown based on class area deviations
# (Using your study's derived metrics)
qd_vals = np.array([0.0, 1.2, 4.8, 12.4, 58.2]) 
plot_ad = td_vals - qd_vals

# 2. Plot Settings
plt.rcParams.update({'font.size': 14, 'font.weight': 'bold'})
fig, ax1 = plt.subplots(figsize=(14, 8))

# Stacked Bar Chart
ax1.bar(models, qd_vals, color='#d62728', alpha=0.8, label='Quantity Disagreement (QD)', edgecolor='black', width=0.6)
ax1.bar(models, plot_ad, bottom=qd_vals, color='#1f77b4', alpha=0.8, label='Allocation Disagreement (AD)', edgecolor='black', width=0.6)

# Line for TD (Total Disagreement)
ax1.plot(models, td_vals, color='black', linestyle='--', marker='o', linewidth=3, markersize=8, label='Total Disagreement (TD)')

# Secondary Axis for MAI (Agreement)
ax2 = ax1.twinx()
ax2.plot(models, mai_vals, color='green', linestyle='-', marker='s', linewidth=3, markersize=8, label='Map Agreement Index (MAI)')

# 3. Annotations
for i in range(len(models)):
    ax1.text(i, td_vals[i] + 2, f'{td_vals[i]:.1f}%', ha='center', va='bottom', fontsize=12)

# Styling
ax1.set_ylabel('Disagreement (%)', fontsize=16)
ax2.set_ylabel('Agreement (MAI) %', fontsize=16, color='green')
ax1.set_ylim(0, 115)
ax2.set_ylim(0, 115)
ax1.set_title('Figure 4: Disagreement Analysis Breakdown', fontsize=20, pad=20)

# Legend
handles1, labels1 = ax1.get_legend_handles_labels()
handles2, labels2 = ax2.get_legend_handles_labels()
ax1.legend(handles1 + handles2, labels1 + labels2, loc='upper center', bbox_to_anchor=(0.5, -0.12), ncol=4, frameon=False)

plt.tight_layout()
plt.show()

## Figure 5: Statistical Significance (McNemar’s Test)
import matplotlib.pyplot as plt
import pandas as pd
import numpy as np

# 1. Define McNemar Data
comparisons = ["RF vs. GBM", "RF vs. CART", "RF vs. MinDist", "RF vs. SVM"]
rf_wins = np.array([8, 39, 83, 358])       # n10 (RF correct, Challenger wrong)
challenger_wins = np.array([2, 8, 17, 8])  # n01 (RF wrong, Challenger correct)
chi2_stats = ["3.60", "20.45", "43.56", "334.70"]
significance = ["p>0.05 (NS)", "p<0.001 (*)", "p<0.001 (*)", "p≈0 (*)"]

# 2. Plotting
fig, ax = plt.subplots(figsize=(12, 8))
y_pos = np.arange(len(comparisons))

# Horizontal Diverging Bars
ax.barh(y_pos, -challenger_wins, color='#d62728', label='Challenger Wins ($n_{01}$)')
ax.barh(y_pos, rf_wins, color='#2ca02c', label='RF Wins ($n_{10}$)')

# Add text labels for the counts
for i in range(len(comparisons)):
    ax.text(rf_wins[i] + 5, i, str(rf_wins[i]), va='center', color='#2ca02c', fontweight='bold')
    ax.text(-challenger_wins[i] - 5, i, str(challenger_wins[i]), va='center', ha='right', color='#d62728', fontweight='bold')

# Y-axis formatting with Chi-Square and Significance
labels_with_stats = [f"{comp}\n($\chi^2$={chi}, {sig})" for comp, chi, sig in zip(comparisons, chi2_stats, significance)]
ax.set_yticks(y_pos)
ax.set_yticklabels(labels_with_stats, fontsize=12)

# Formatting
ax.axvline(0, color='black', linewidth=1)
ax.set_xlim(-50, 420)
ax.set_xlabel('Number of Discordant Pairs', fontsize=14)
ax.set_title('Figure 5: Statistical Significance (McNemar\'s Test vs RF)', fontsize=18, pad=20)
ax.legend(loc='lower right', frameon=False)
ax.spines['top'].set_visible(False)
ax.spines['right'].set_visible(False)

plt.tight_layout()
plt.show()
